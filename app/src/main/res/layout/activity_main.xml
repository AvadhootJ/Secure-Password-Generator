<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    xmlns:margin="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bbbb"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text = "Please choose your password type."
        android:textSize="40dp"
        android:textColor = "#FAFAFA"
        android:textStyle = "bold"
        android:id="@+id/textView"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/LowButton"

        android:text="Personal"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:textAlignment="gravity"
        android:gravity="center"

        android:layout_width="270dp"
        android:layout_height="90dp"
        android:background="@drawable/lemybutton"
        android:shadowColor="#A8A8A8"
        android:scaleType="fitCenter"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp" />


    <Button
        android:id="@+id/TwoButton"

        android:text="Security"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:textAlignment="gravity"
        android:gravity="center"

        android:layout_width="270dp"
        android:layout_height="90dp"
        android:background="@drawable/button2"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/LowButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/HighButton"

        android:text="Insane!!"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:textAlignment="gravity"
        android:gravity="center"

        android:layout_width="270dp"
        android:layout_height="90dp"
        android:background="@drawable/insane"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_below="@+id/TwoButton"
        android:layout_alignLeft="@+id/TwoButton"
        android:layout_alignStart="@+id/TwoButton"
        android:layout_marginTop="41dp" />

</RelativeLayout>
